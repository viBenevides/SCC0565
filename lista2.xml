        <recipe>
            <name>Ovo Frito</name>
            <autor>Manoel Guedes</autor>
            <description>Aprenda a melhor forma de se preparar ovo frito</description>
            <recipeCategory>Rapidas</recipeCategory>
            <totalTime>5 minutos</totalTime>
            <recipeYield>serve 1 pessoa</recipeYield>
            <cookingMethod>fritura</cookingMethod>
            <nutrition>
                <calories>120 calorias</calories>
            </nutrition>
            <recipeIngredients>
                <quantity>1</quantity>
                <fooditem>ovo</fooditem>
            </recipeIngredients>
            <recipeIngredients>
                <quantity>1</quantity>
                <unit>colher de sopa</unit>
                <fooditem>manteiga</fooditem>
