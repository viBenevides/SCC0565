        <recipe>
            <name>Miojo de Microondas</name>
            <autor>José Silva</autor>
            <description>Um delicioso miojo pronto em minutos</description>
            <recipeCategory>Rapidas</recipeCategory>
            <totalTime>5 minutos</totalTime>
            <recipeYield>serve 1 pessoa</recipeYield>
            <cookingMethod>cozido</cookingMethod>
